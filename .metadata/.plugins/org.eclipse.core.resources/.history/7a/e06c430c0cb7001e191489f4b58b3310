package org.generation.collecttions;

import java.util.Arrays;
import java.util.HashSet;

public class HashSetCollection {
	public static void main(String[] args) {
		//HashSet es una clase de Collections donde cada elemento es únice, es decir, no se repiten los elementos
		
		HashSet<String> animals = new HashSet<String>();
		
		animals.add("Buho");
		animals.add("Caballo");
		animals.add("Perro");
		animals.add("Gato");
		animals.add("Ornitorrinco");
		animals.add("Cebra");
		animals.add("Ornitorrinco");
		animals.add("Mapache");
		animals.add("Capibara");
		animals.add("Capibara");
		animals.add("Capibara");
		animals.add("Capibara");
		animals.add("Capibara");
		
		//Imprimir el HashSet
		System.out.println(animals);
		
		//Conocer si un elemento se encuentra dentro del Set: contains();
		System.out.println(animals.contains("Capibara"));
		
		//Eliminar si un elemento: remove()
		animals.remove("Cebra");//Elimino
		System.out.println(animals); //Imprimo el Set sin el elemento eliminado 
		
		//Agregando elementos en una sola línea
		animals.addAll(Arrays.asList("Perrito", "Gatito", "Osito", "Nahual", "Tepezcuintle"));
		System.out.println(animals);
		
		//Limpiar el HashSet
		animals.clear();
		System.out.println(animals);
	}//main
}//class
